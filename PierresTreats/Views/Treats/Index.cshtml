@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
@using System.Security.Claims
@model IEnumerable<PierresTreats.Models.Treat>


<h1>Treats</h1>

<h1>Here is your lists of treats, @User.Identity.Name</h1>
<hr/>
@if (Model.Any())
{
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.Description}", "Details", new { id = treat.TreatId})</li>
    }
  </ul>
} 
else
{
  <h3>No treats have been added yet!</h3>
}

<p>@Html.ActionLink("Add new treat", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
